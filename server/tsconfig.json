{
    "compilerOptions": {
        "sourceMap": true,
        "module": "commonjs",
        "target": "es2017",
        "outDir": "dist",
        "baseUrl": ".",
        "alwaysStrict": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "lib": [
            "es2017"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/**/*.test.ts",
        "node_modules"
    ]
}